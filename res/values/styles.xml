<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAnswers</item>
    </style>

    <style name="root_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="heading_question">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorQuizQuestion</item>
    </style>

    <style name="radio_group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:colorPrimary"></item>

    </style>

    <style name="radio_answer1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAnswers</item>
        <item name="android:buttonTint">@color/colorAnswersPair</item>
    </style>

    <style name="radio_answer2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAnswers</item>
        <item name="android:buttonTint">@color/colorAnswersPair</item>
    </style>

    <style name="radio_answer3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAnswers</item>
        <item name="android:buttonTint">@color/colorAnswersPair</item>
    </style>

    <style name="radio_answer4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAnswers</item>
        <item name="android:buttonTint">@color/colorAnswersPair</item>
    </style>

    <style name="linearseparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@color/colorSeparatorBg</item>
        <item name="android:color">@color/colorSeparator</item>

    </style>

    <style name="checkbox">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="checkbox_answer1" parent="checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAnswers</item>
        <item name="android:buttonTint">@color/colorAnswers</item>
    </style>

    <style name="checkbox_answer2" parent="checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAnswers</item>
        <item name="android:buttonTint">@color/colorAnswersPair</item>
    </style>

    <style name="checkbox_answer3" parent="checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAnswers</item>
        <item name="android:buttonTint">@color/colorAnswersPair</item>
    </style>

    <style name="checkbox_answer4" parent="checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAnswers</item>
        <item name="android:buttonTint">@color/colorAnswersPair</item>
    </style>

    <style name="header_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="scroll_view_quiz">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:fadingEdgeLength">24dp</item>
        <item name="android:requiresFadingEdge">vertical</item>
    </style>


    <style name="button_submit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/colorButtonBg</item>
        <item name="android:textColor">@color/colorButton</item>
    </style>
</resources>
